{
  "name": "playwright",
  "description": "Classroom dekstop tests with Allure reporting and GitHub Actions integration",
  "scripts": {
    "test:all": "sh -c 'for f in conf/*.config.js; do echo Running $f; npx playwright test --config=$f; done'",
    "allure:generate": "npx allure-commandline generate allure-results --clean -o allure-report",
    "allure:open": "npx allure-commandline open allure-report",
    "allure:serve": "npx allure-commandline serve allure-results"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "allure-playwright": "^2.4.0",
    "@playwright/test": "1.41.0"
  },
  "devDependencies": {
    "playwright": "1.41.0",
    "allure-commandline": "^2.34.1"
  },
  "allure": {
    "outputDir": "allure-results"
  }
}
